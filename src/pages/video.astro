---
import MainLayout from '../layouts/MainLayout.astro';
import GalleryDisplay from '../components/GalleryDisplay.astro';
import videoFour from '../gallery/description-des-pieces/VIDEO 4.mov';
import videoFive from '../gallery/description-des-pieces/VIDEO 5.mov';
import videoSix from '../gallery/description-des-pieces/VIDEO 6.mov';
import videoLanding from '../gallery/description-des-pieces/VIDEO LANDING.mov';

const additionalVideos = [
	{
		src: videoLanding,
		title: 'Vue immersive du panorama',
		description: 'Balade filmée depuis la terrasse principale avec vue plongeante sur le lac.'
	},
	{
		src: videoFour,
		title: 'Entrée de la maison avant les travaux',
		description: 'Entrée de la maison avant les travaux.'
	},
	{
		src: videoFive,
		title: 'Focus sur le séjour',
		description: 'Présentation rapide des suites et de la circulation à l’étage.'
	},
	{
		src: videoSix,
		title: 'Focus sur le rez de chaussée et les chambres du bas',
		description: 'Visite filmée du rez-de-chaussée et des chambres du bas.'
	}
];
---

<MainLayout>
	<!-- AUTRES VIDEOS -->
	<section class="section reveal" style="background: var(--bg-elevated);">
		<div class="container-modern">
			<div class="section-header section-header-sticky">
				<p class="section-eyebrow">Autres séquences</p>
				<h2 class="section-title">Vivez chaque espace en mouvement</h2>
			</div>

			<div class="video-grid">
				{additionalVideos.map((video, index) => (
					<article class="video-card gradient-accent glow-on-hover text-reveal" style={`animation-delay: ${index * 0.1}s;`}>
						<div class="video-card-media">
							<video
								src={video.src}
								controls
								playsinline
								muted
								loop
								preload="metadata"
							>
								<source src={video.src} type="video/quicktime" />
								Votre navigateur ne lit pas ce format. <a href={video.src} download> Télécharger la vidéo</a>.
							</video>
						</div>
						<div class="video-card-body">
							<p class="eyebrow">{video.title}</p>
							<p>{video.description}</p>
						</div>
					</article>
				))}
			</div>
		</div>
	</section>

	<!-- SELECTION IMAGES -->
	<section class="section reveal" style="background: var(--bg-card);">
		<div class="container-modern">
			<div class="section-header">
				<p class="section-eyebrow">Complément visuel</p>
				<h2 class="section-title">Quelques plans fixes</h2>
				<p class="section-desc">Le film reste accompagné de cette sélection d'images extérieures.</p>
			</div>
			<GalleryDisplay collection="landing" />
		</div>
	</section>
</MainLayout>
